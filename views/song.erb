<div class="album">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2>Song: <%= @song.name %></h2>
      <h3>Album: <%= @song.album.name %></h3>
      <h3>Songwriter: <%= @song.songwriter %></h3>
      <% if @song.lyrics %>
        <h3>Lyrics:</h3>
        <p class="lyrics"><%= @song.lyrics %></p>
      <% else %>
        <p>No lyrics have been posted for this song</p>
      <% end %>
      <form action="/albums/<%= @song.album.id %>/songs/<%= @song.id %>/edit" method="get">
        <button type="submit" class="btn btn-primary">Edit song</button>
      </form>

      <form action="/albums/<%= @song.album.id %>/songs/<%= @song.id %>" method="post" class="spacer">
        <input name="_method" type="hidden" value="delete">
        <button type="submit" class="btn btn-danger">Delete song</button>
      </form>
    </div>
  </div>
  <div class="row center">
    <a href="/albums/<%= @song.album.id %>" class="spacer">Back to <%= @song.album.name %></a>
  </div>
</div>