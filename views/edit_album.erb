<div class="row album">
  <div class="col-md-3"></div>
  <div class="col-md-6">  
    <h2>Update <%= @album.name %></h2>

    <form action="/albums/<%= @album.id() %>" method="post">
      <div class="form-group">
        <input name="_method" type="hidden" value="patch">
        <label for="new_name">Rename album</label>
        <input id="n" name="new_name" class="form-control" type="text" placeholder="name" value="<%=@album.name%>">
      </div>
      <button type="submit" class="btn btn-primary">Change name</button>
    </form>

    <form action="/albums/<%= @album.id() %>" method="post">
      <input name="_method" type="hidden" value="delete">
      <div style="padding-top: 10px;">
        <button type="submit" class="btn btn-danger">Delete album</button>
      </div>
    </form>
  </div>
</div>