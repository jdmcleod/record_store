<div class="row album">
  <div class="col-md-4"></div>
  <div class="col-md-6">
    <h2> Search Results </h2>

    <% if @albums.any? %>
    <ul>
    <% @albums.each do |album| %>
      <li>
      <img src="https://www.stickpng.com/assets/images/5856b3da4f6ae202fedf2794.png" class="album-logo">
      <a href="/albums/<%= album.id %>"><%= album.name %></a>
      </li>
      <% end %>
      </ul>
      <% else %>
      <p>Could not find an album called <%=params[:search]%></p>
      <% end %>
      <a href="/albums">Return to album list</a>
    </div>
</div>